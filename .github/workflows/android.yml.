name: Build APK

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up JDK 17
      uses: actions/setup-java@v2
      with:
        java-version: 17
        distribution: 'adoptopenjdk'

    - name: Set up Android SDK
      uses: reactivecircus/android-sdk@v1

    - name: Build APK
      run: ./gradlew assembleRelease
